{
  "name": "did-siop",
  "version": "1.0.0",
  "description": "Self Issued OpenId Connect Provider for decentralized identity implemented as a browser add-on",
  "scripts": {
    "test": "jest --runInBand",
    "chrome-build": "browserify src/chrome/background.js -o dist/chrome/background/background.bundle.js && browserify src/chrome/popup/popup.js -o dist/chrome/popup/popup.bundle.js",
    "lib-compile": "babel dist/lib/did-siop.bundle.js --out-file dist/lib/did-siop.bundle.compiled.js --presets=@babel/preset-env",
    "lib-minify": "uglifyjs --compress --mangle --output dist/lib/did-siop.bundle.compiled.minified.js -- dist/lib/did-siop.bundle.compiled.js",
    "lib-build": "browserify src/common/index.js --s DID_SIOP > dist/lib/did-siop.bundle.js && npm run-script lib-compile && npm run-script lib-minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SanujaLW/did-siop.git"
  },
  "author": "SanujaLW",
  "license": "LGPL-3.0",
  "bugs": {
    "url": "https://github.com/SanujaLW/did-siop/issues"
  },
  "homepage": "https://github.com/SanujaLW/did-siop#readme",
  "dependencies": {
    "@babel/polyfill": "^7.8.7",
    "base64url": "^3.0.1",
    "did-resolver": "^1.1.0",
    "ecdsa-sig-formatter": "^1.0.11",
    "elliptic": "^6.5.2",
    "ethereum-checksum-address": "0.0.5",
    "ethereum-private-key-to-public-key": "0.0.3",
    "ethereum-public-key-to-address": "0.0.2",
    "ethr-did-resolver": "^2.2.0",
    "jquery": "^3.5.0",
    "jwa": "^2.0.0",
    "node-rsa": "^1.0.8",
    "query-string": "^6.12.0",
    "web-did-resolver": "^1.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "jest": "^25.1.0",
    "nock": "^12.0.3",
    "uglify-js": "^3.9.1"
  }
}
